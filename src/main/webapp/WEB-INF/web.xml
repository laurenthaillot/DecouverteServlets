		<url-pattern>/bonjourlaurent</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>GoodBye</servlet-name>
		<url-pattern>/aurevoirlaurent</url-pattern>
		
	</servlet-mapping> -->
</web-app>